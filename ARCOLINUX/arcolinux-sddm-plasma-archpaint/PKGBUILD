# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinux-sddm-plasma-archpaint-git
_pkgname=arcolinux-sddm-plasma-archpaint
_destname1="/usr"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=21.02
pkgrel=6
pkgdesc="ArchPaint2 Breeze SDDM theme adapted for ArcoLinux"
arch=('any')
url="https://github.com/arcolinux/${_pkgname}"
license=('GPL3')
depends=('ttf-roboto' 'kdeplasma-addons')
install=$pkgname.install
makedepends=('git')
options=(!strip !emptydirs)
replaces=('arcolinux-sddm-archpaint-git')
source=(${_pkgname}::git+$url)
sha256sums=('SKIP')
package() {
  install -dm755 ${pkgdir}${_licensedir}${_pkgname}
  install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

  cp -r ${srcdir}/${_pkgname}/${_destname1} ${pkgdir}
}

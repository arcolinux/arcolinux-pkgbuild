# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinux-sddm-sugar-candy-git
_pkgname=arcolinux-sddm-sugar-candy
_destname1="/usr"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=21.07
pkgrel=02
pkgdesc="Sugar Candy SDDM theme adapted for ArcoLinux"
arch=('any')
url="https://github.com/arcolinux/${_pkgname}"
license=('GPL3')
depends=('qt5-graphicaleffects' 'qt5-quickcontrols2' 'qt5-svg' 'qt5-virtualkeyboard')
install=$pkgname.install
makedepends=('git')
options=(!strip !emptydirs)
replaces=()
source=(${_pkgname}::git+$url)
sha256sums=('SKIP')
package() {
  install -dm755 ${pkgdir}${_licensedir}${_pkgname}
  install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

  cp -r ${srcdir}/${_pkgname}/${_destname1} ${pkgdir}
}

# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinuxd-welcome-app-git
_pkgname=arcolinuxd-welcome-app
_destname1="/etc/skel/.config/"
_destname2="/usr/"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=22.01
pkgrel=02
pkgdesc="Welcome application for arcolinux"
arch=('any')
url="https://github.com/arcolinux/arcolinuxd-welcome-app"
license=('GPL3')
makedepends=('git')
depends=('libwnck3')
provides=("${pkgname}")
conflicts=('arcolinux-welcome-app-dev-git' 'arcolinux-welcome-app-deepin-git' 'arcolinux-welcome-app-git')
install='readme.install'
options=(!strip !emptydirs)
source=("${url}/archive/${pkgver}-${pkgrel}.tar.gz")
sha256sums=('SKIP')
package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}-${pkgver}-${pkgrel}/LICENSE ${pkgdir}${_licensedir}${_pkgname}
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}-${pkgver}-${pkgrel}/${_destname1}/"* "${pkgdir}${_destname1}"
	mkdir -p "${pkgdir}${_destname2}"
	cp -r "${srcdir}/${_pkgname}-${pkgver}-${pkgrel}/${_destname2}/"* "${pkgdir}${_destname2}"
}

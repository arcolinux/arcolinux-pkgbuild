# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinux-calamares-tool-dev-git
_pkgname=arcolinux-calamares-tool
_destname1="/usr/"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=21.06
pkgrel=01
pkgdesc="ArcoLinux Calamares Tool Dev"
arch=('any')
url="https://github.com/arcolinux/arcolinux-calamares-tool-dev"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
conflicts=("arcolinux-calamares-tool-git")
install='readme.install'
options=(!strip !emptydirs)
source=(${_pkgname}::"git+${url}")
sha256sums=('SKIP')
package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}/${_destname1}/"* "${pkgdir}${_destname1}"
	#mkdir -p "${pkgdir}${_destname2}"
	#cp -r "${srcdir}/${_pkgname}/${_destname2}/"* "${pkgdir}${_destname2}"
}

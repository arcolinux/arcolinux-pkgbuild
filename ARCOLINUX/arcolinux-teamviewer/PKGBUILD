license=('custom')
options=('!strip')
provides=('arcolinux-teamviewer')
conflicts=('teamviewer-beta' 'teamviewer')
# /opt/teamviewer/tv_bin/script/teamviewer_setup checklibs can check deps for each TV component:
# TV_DMN, TV_DESK, TV_GUI
depends=(

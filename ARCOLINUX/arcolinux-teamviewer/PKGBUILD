	'qt5-webkit'
	'qt5-x11extras'
	'qt5-quickcontrols'
	#'lib32-fontconfig'
	#'lib32-libpng12'
	#'lib32-libsm'
	#'lib32-libxinerama'
	#'lib32-libxrender'
	#'lib32-libjpeg6-turbo'
	#'lib32-libxtst'
	#'lib32-dbus'
	#'lib32-freetype2'
)
#depends_x86_64=(

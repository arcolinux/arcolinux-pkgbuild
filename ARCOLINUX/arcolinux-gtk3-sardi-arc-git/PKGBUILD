# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinux-gtk3-sardi-arc-git
_pkgname=arcolinux-gtk3-sardi-arc
_destname1="/etc/skel/.config/gtk-3.0/"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=23.04
pkgrel=03
pkgdesc="Gtk3 config for ArcoLinux"
arch=('any')
url="https://github.com/arcolinux/arcolinux-gtk3-sardi-arc"
license=('GPL3')
makedepends=('git')
depends=('bash')
conflicts=('arcolinux-gtk3-surfn-arc-git' 'arcolinux-gtk3-surfn-arc-breeze-git' 'arcolinux-gtk3-surfn-plasma-dark-git' 'arcolinux-gtk3-arcolinux-candy-beauty-git')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/arcolinux/${_pkgname}.git")
sha256sums=('SKIP')
install='readme.install'
package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	cp -r  ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname1}
}

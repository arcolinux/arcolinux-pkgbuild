# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinux-chadwm-nemesis-git
_pkgname=chadwm
_destname1="/etc/skel/.config/"
#_destname2="/usr/share/doc/dwm/"
#_destname3="/usr/share/licenses/dwm/"
#_destname4="/usr/share/man/man1/"
_destname5="/usr/"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=23.06
pkgrel=03
pkgdesc="Configuration files for ArcoLinux Iso"
arch=('any')
url="https://github.com/arcolinux/arcolinux-chadwm-nemesis"
license=('GPL3')
makedepends=('git')
depends=('xorg-server'
			 'xorg-xsetroot'
			 'feh'
			 'wget'
			 'rofi'
			 'arcolinux-rofi-git'
			 'arcolinux-rofi-themes-git'
			 'acpi'
			 'imlib2'
			 'slock'
			 'imlib2'
			 'eww'
			 'dash'
			 'ttf-jetbrains-mono-nerd')
optdepends=('arcolinux-chadwm-pacman-hook-git')
conflicts=(arcolinux-chadwm-git)
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/arcolinux/arcolinux-${_pkgname}-nemesis.git")
sha256sums=('SKIP')
install='readme.install'

build() {
  cd "$srcdir/$_pkgname/etc/skel/.config/arco-chadwm/chadwm"
  make
}

package() {

  cd "$srcdir/$_pkgname/etc/skel/.config/arco-chadwm/chadwm"
  make PREFIX=/usr DESTDIR="$pkgdir" install

	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	cp -r  ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname1}

	#install -dm755 ${pkgdir}${_destname2}
	#cp -r  ${srcdir}/${_pkgname}${_destname2}* ${pkgdir}${_destname2}

	#install -dm755 ${pkgdir}${_destname3}
	#cp -r  ${srcdir}/${_pkgname}${_destname3}* ${pkgdir}${_destname3}

	#install -dm755 ${pkgdir}${_destname4}
	#cp -r  ${srcdir}/${_pkgname}${_destname4}* ${pkgdir}${_destname4}

	install -dm755 ${pkgdir}${_destname5}
	cp -r  ${srcdir}/${_pkgname}${_destname5}* ${pkgdir}${_destname5}
}

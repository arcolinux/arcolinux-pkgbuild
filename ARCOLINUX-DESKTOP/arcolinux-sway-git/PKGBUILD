pkgname=arcolinux-sway-git
_pkgname=arcolinux-sway
_destname1="/etc/skel/.config/"
_destname5="/usr/share/"
_licensedir="/usr/share/arcolinux/licenses/"
pkgver=22.12
pkgrel=18
pkgdesc="Desktop configuration for ArcoLinux -D -B"
arch=('any')
url="https://github.com/arcolinux/arcolinux-sway"
license=('GPL3')
makedepends=('git')
depends=(
'arcolinux-candy-beauty-git'
'arcolinux-foot-git'
'arcolinux-xfce-git'
'arcolinux-kitty-git'
'arcolinux-rofi-git'
